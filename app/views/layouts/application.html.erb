<!DOCTYPE html>
<html>
  <head>
    <title>RoRIntroduction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class="nav user">Welcome,  <b><%= current_user.first_name %></b> Guru | <%= link_to 'Logout', logout_path %></p>
    <% else %>
      <p class="nav user"><%= link_to 'Login', login_path %> | <%= link_to 'Sign up', signup_path %>
    <% end %>
    <%= yield %>
  </body>

  <%= render 'shared/footer'%>
</html>
