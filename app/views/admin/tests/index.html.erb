<h1>Tests</h1>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer" class="align-middle">
        Title
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %> 
      </th>
      <th class="align-middle">Level</th>
      <th class="align-middle">Questions</th>
      <th colspan=3 class="align-middle">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<p><%= link_to 'New test', new_admin_test_path %></p>
